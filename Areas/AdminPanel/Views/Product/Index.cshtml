@model List<Product>
@{
    int count = 0;
}
<div class="container" style="margin-top: 100px">
    <div class="d-flex" style="justify-content:space-between;align-items:center">
        <h1>Categories</h1>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">No#</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Size</th>
                <th scope="col">Color</th>
                <th scope="col">Material</th>
                <th scope="col">Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>

                    <td>
                        <a class="btn btn-secondary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>